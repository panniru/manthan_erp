    %label Savings:
    = render :partial => "salary_taxes/savings_show", :formats => [:html, :haml]
.row
  .col-xs-10
    %label Medical Insurances:
    = render :partial => "salary_taxes/medical_insurances_show", :formats => [:html, :haml]
