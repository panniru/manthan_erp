        = fa_icon "list-alt lg"
  .form-group
    %label.col-md-6.control-label Balance Tax
    .col-md-6
      %input{ :type => "number", :class => "form-control", :ng_model => "salaryTax.balance_tax"}
  .form-group
    %label.col-md-6.control-label Balance Tax/Month(next {{salaryTax.count_of_payslips_to_create_in_the_year}} months)
    .col-md-6
      %input{ :type => "number", :class => "form-control", :ng_model => "salaryTax.balance_tax_per_remaining_months_each", :readonly => true}
