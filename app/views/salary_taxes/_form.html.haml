      %input{ :type => "number", :class => "form-control", :readonly => "true", :ng_model => "salaryTax.conveyance_allowance", :salary_tax_component => "true"}

  .form-group
    %label.col-md-6.control-label Standard Deduction (-)
    .col-md-3
      = text_field_tag :standard_deduction, "",:class => "form-control", :ng_model => "salaryTax.standard_deduction", :salary_tax_component => "true"
  .form-group
    %label.col-md-6.control-label Professional Tax (-)
    .col-md-3
      %input{ :type => "number" , :class => "form-control", :ng_model => "salaryTax.professional_tax", :salary_tax_component => "true"}
