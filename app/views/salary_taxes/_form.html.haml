  .form-group
    %label.col-md-6.control-label Total Amount
    .col-md-6
      %input{ :type => "number", :class => "form-control", :ng_model => "total_amount"}

  .form-group
    %label.col-md-6.control-label Total Tax Projected
    .col-md-6
      %input{ :type => "number", :class => "form-control", :ng_model => "salaryTax.total_tax_projection"}

  .form-group
    %label.col-md-6.control-label Surcharge(+)
    .col-md-6
      %input{ :type => "number", :class => "form-control", :ng_model => "salaryTax.surcharge"}
