%form{:id => "myForma", :class=>"form-horizontal", :ng_submit => "submitHouses()"}  
  .form-group{"ng-repeat" => "house in housees"}
    %label{:class => "form-label col-md-3"} 
      %b
        School Houses
    .col-md-4     
      = text_field_tag  "bulk_house[][house_name]",nil, :class => "form-control", :ng_model => "house.house_name", :placeholder => "House Name" 
    .col-md-4{"ng-show"=>"showErrorMessage"}
      error
  .row
    .col-md-5.col-md-offset-3      
      %button{:ng_disabled => "moreHouses", :type => "button", :class=> "btn btn-primary", :ng_click => "addMoreHouses()"}=  "More Houses"
      %button{:type=>"submit", :class=> "btn btn-primary"}=  "Save"
  
