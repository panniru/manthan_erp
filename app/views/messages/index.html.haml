.row{:ng_controller => "CommunicationMailsController"}
  .row
    .col-md-3
      .pull-left
        .input-group
          %span.input-group-addon
            = fa_icon "search lg"
          %input#search{name: "search", placeholder: "Enter Search Term", type: "text",:class => 'form-control'}/
  .row
    .col-md-2
      %h3 Recordings
 
    .col-md-2
      = link_to "New Recording" , new_message_path , :class => 'btn btn-primary'
  %br
  .row
    .col-md-5
      %table#tblData.table.table-hover
        %thead
          %th Subject
        %tbody
          - @messages.each do |a|
            %tr
              %td
                = link_to a.subject , message_path(a)
