%form{:id => "myForma", :class=>"form-horizontal", :ng_submit => "submitDesignations()"}  
  .form-group{"ng-repeat" => "reason in reasons"}
    %lablel{:class => "form-label col-md-3"} 
      %b
        Reasons
    .col-md-4     
      = text_field_tag  "bulk_reason[][reason]",nil, :class => "form-control", :ng_model => "reason.reason", :placeholder => "Reason" 
    .col-md-4{"ng-show"=>"showErrorMessage"}
      error
  .row
    .col-md-5.col-md-offset-3      
      %button{:ng_disabled => "moreReasons", :type => "button", :class=> "btn btn-primary", :ng_click => "addMoreReasons()"}=  "More Reasons"
      %button{:type=>"submit", :class=> "btn btn-primary"}=  "Save"
  
