.banner
  .logo
    = image_tag "logo.png", :align => 'left', :class => "img-rounded", :style => "margin-left:33px;" 
  .pull-right
    - if current_user.present?
      %ul.nav.navbar-nav
        %li{:ng_controller => "HomeController", :ng_init => "userUnReadMails()"}
          %a.alertClass{:href => "/communication_mails", :style => "color: whitesmoke;"}
            %span.fa-stack.fa-lg
              %i.fa.fa-bell-o.fa-stack-2x
              %i.fa.fa-stack-1x {{unreadMails}}
        %li.dropdown
          %a{:href => "#", :class => "dropdown-toggle", :data => {:toggle => "dropdown"}}
            = image_tag "test_thumb.jpg", :align => 'left', :class => "img-circle", :height => "30px", :width => "30px"
            User
            %b.caret
          %ul.dropdown-menu
            %li
              %a{:href => destroy_user_session_path, :data => {:method => :delete}}
                = fa_icon "sign-out"
                Log Out

